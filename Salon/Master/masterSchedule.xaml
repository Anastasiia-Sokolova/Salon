<Page x:Class="Salon.Master.masterSchedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Salon.Master"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="masterSchedule">

    <Grid Background="#FF2E323B">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="299*"/>
            <RowDefinition Height="104*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="697*"/>
            <ColumnDefinition Width="52*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="scheduleDataGrid" Grid.Column="1" Grid.Row="1" Background="#FF575652" />
        <Label Content="My Schedule" Grid.Column="1"  FontSize="20" FontWeight="Bold" Background="#FFAAB1B9"/>
    </Grid>
</Page>

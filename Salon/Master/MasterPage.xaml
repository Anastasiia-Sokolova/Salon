<Page x:Class="Salon.Master.MasterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Salon.Master"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MasterPage">

    <Grid Background="#FF2E323B">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="54*"/>
            <RowDefinition Height="182*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="203*"/>
            <ColumnDefinition Width="221*"/>
            <ColumnDefinition Width="296*"/>
        </Grid.ColumnDefinitions>
        <Button Content="My schedule" Grid.Column="2" Grid.Row="2" Background="#FFFEEA53" FontSize="14" FontWeight="Bold" Click="Button_Click"/>
        <Button x:Name="myWorksBtn" Content="My works" Grid.Column="2" Grid.Row="4" Background="#FFFEEA53" FontSize="14" FontWeight="Bold" Click="myWorksBtn_Click"/>
        <Image Source="/Salon;component/логотип.JPG"/>
    </Grid>
</Page>
